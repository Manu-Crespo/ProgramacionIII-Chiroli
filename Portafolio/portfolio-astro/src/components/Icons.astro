---
// src/components/Icons.astro

// Definición de las props con TypeScript
interface Props {
  iconType: 'tech' | 'contact'; // Para diferenciar si es un icono de tecnología o de contacto
  href?: string; // Opcional, solo para los iconos de contacto (enlaces)
  text: string;
}

const { iconType, href, text } = Astro.props;

// Clase base que se usará en el HTML
const baseClass = iconType === 'tech' ? 'tech-icon' : 'contact-icon';

// Aquí es donde deberías insertar el SVG del icono real
const IconPlaceholder = `[Icono de ${text}]`; 
---

{/* Si es un ícono de contacto, es un <a>. Si es de tecnología, es un <div>. */}
{href ? (
  <a href={href} target="_blank" class={baseClass}>
    <div class="icon-placeholder">{IconPlaceholder}</div>
    <span>{text}</span>
  </a>
) : (
  <div class={baseClass}>
    <div class="icon-placeholder">{IconPlaceholder}</div>
    <span>{text}</span>
  </div>
)}

<style>
  .tech-icon, .contact-icon {
    display: flex;
    flex-direction: column; 
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  /* Estilo del contenedor del icono */
  .icon-placeholder { 
    width: 60px;
    height: 60px;
    background-color: #eee;
    border-radius: 10px;
    line-height: 60px; /* Centra el texto placeholder */
    font-weight: bold;
    color: #999;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    display: flex; /* Para centrar el SVG/texto */
    align-items: center;
    justify-content: center;
  }
  
  .tech-icon span, .contact-icon span {
    margin-top: 8px;
    font-size: 0.9em;
    color: #555;
  }

  /* Efecto Hover para íconos de Contacto */
  .contact-icon:hover .icon-placeholder {
    transform: scale(1.1);
    background-color: #ddd;
  }
</style>